#!/bin/sh

# Copied from .git/hooks/pre-commit generated by addKtlintCheckGitPreCommitHook task from ktlint plugin

set -e
######## KTLINT-GRADLE HOOK START ########

CHANGED_FILES="$(git --no-pager diff --name-status --no-color --cached --diff-filter=dr | awk '$2 ~ /\.kts$|\.kt$/ { print $2}')"
RENAMED_FILES="$(git --no-pager diff --name-status --no-color --cached --diff-filter=R | awk '$3 ~ /\.kts$|\.kt$/ { print $3 }')"

CHANGED_FILES+=" $RENAMED_FILES"

if [ -z "$CHANGED_FILES" ]; then
    echo "No Kotlin staged files."
    exit 0
fi;

echo "Running ktlint over these files:"
echo "$CHANGED_FILES"

./gradlew --quiet ktlintCheck -PinternalKtlintGitFilter="$CHANGED_FILES"

echo "Completed ktlint run."

echo "Completed ktlint hook."
######## KTLINT-GRADLE HOOK END ########